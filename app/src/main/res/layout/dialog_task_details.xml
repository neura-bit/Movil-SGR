<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Header with Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#212121"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_tarea"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvTaskEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                tools:text="CREADA"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

        </LinearLayout>

    </LinearLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Cliente Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_cliente"
                android:textColor="@color/login_accent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/task_card_background"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/task_icon_tint"
                            android:contentDescription="@string/desc_person_icon"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_nombre"
                                android:textColor="@color/task_text_secondary"
                                android:textSize="12sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tvClienteNombre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Punto Net"
                                android:textColor="@color/task_text_primary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/task_icon_tint"
                            android:contentDescription="@string/desc_location_icon"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_direccion"
                                android:textColor="@color/task_text_secondary"
                                android:textSize="12sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tvClienteDireccion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Calle 123 # 45-67"
                                android:textColor="@color/task_text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/task_icon_tint"
                            android:contentDescription="@string/desc_phone_icon"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_telefono"
                                android:textColor="@color/task_text_secondary"
                                android:textSize="12sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tvClienteTelefono"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="3001234567"
                                android:textColor="@color/task_text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!-- Call Button Icon -->
                        <ImageButton
                            android:id="@+id/btnCallPhone"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_call"
                            android:tint="#4CAF50"
                            android:padding="8dp"
                            android:contentDescription="@string/desc_llamar"
                            android:scaleType="centerInside" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Task Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalles_tarea"
                android:textColor="@color/login_accent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/task_card_background"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_tipo"
                            android:textColor="@color/task_text_secondary"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvTipoOperacion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Entrega"
                            android:textColor="@color/task_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_categoria"
                            android:textColor="@color/task_text_secondary"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCategoria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Urgente"
                            android:textColor="@color/task_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_fecha_limite"
                            android:textColor="@color/task_text_secondary"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvFechaLimite"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="2025-12-12 07:50"
                            android:textColor="@color/task_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Archivos Adjuntos Section -->
            <LinearLayout
                android:id="@+id/layoutArchivosAdjuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_archivos_adjuntos"
                    android:textColor="@color/login_accent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvArchivosAdjuntos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="20dp" />

            </LinearLayout>

            <!-- Comentario Section (if exists) -->
            <LinearLayout
                android:id="@+id/layoutComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_comentario"
                    android:textColor="@color/login_accent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text_underline"
                    android:padding="16dp"
                    tools:text="Este es un comentario de ejemplo"
                    android:textColor="@color/task_text_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIniciarTarea"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/btn_iniciar_tarea"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinalizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_finalizar"
                    app:icon="@android:drawable/ic_menu_send"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

