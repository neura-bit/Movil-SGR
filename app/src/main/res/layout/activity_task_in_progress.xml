<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".ui.tasks.TaskInProgressActivity">

    <!-- Background gradient or solid - keeping simplified dark background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/black" 
        android:alpha="0.2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarea en Proceso"
                android:textColor="@color/login_accent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:alpha="0.9" />

            <!-- Timer Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_dark"
                app:strokeColor="@color/login_accent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_timer"
                        app:tint="@color/login_accent" />

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiempo Transcurrido"
                        android:textSize="14sp"
                        android:textColor="@color/login_text_secondary"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Task Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTaskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Tarea"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:background="@color/login_accent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Task Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_delivery"
                            app:tint="@color/login_accent" />

                        <TextView
                            android:id="@+id/tvTipoOperacion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entrega"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_category"
                            app:tint="@color/login_text_secondary" />

                        <TextView
                            android:id="@+id/tvCategoria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Categoría"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Client Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/login_accent"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvClienteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Cliente"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvClienteAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección del cliente"
                        android:textSize="15sp"
                        android:textColor="@color/login_text_secondary"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/login_accent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvClientePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+593 999 999 999"
                        android:textSize="15sp"
                        android:textColor="@color/login_text_secondary"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/status_online_green"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCallClient"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:text="Llamar"
                    android:textSize="15sp"
                    android:textColor="@color/status_online_green"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_phone"
                    app:iconGravity="top"
                    app:iconTint="@color/status_online_green"
                    app:iconSize="28dp"
                    app:iconPadding="4dp"
                    app:strokeColor="@color/status_online_green"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenMap"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:text="Ubicación"
                    android:textSize="15sp"
                    android:textColor="@color/login_accent"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_location"
                    app:iconGravity="top"
                    app:iconTint="@color/login_accent"
                    app:iconSize="28dp"
                    app:iconPadding="4dp"
                    app:strokeColor="@color/login_accent"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:elevation="4dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Finish Task Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishTask"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Finalizar Tarea"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart"
                app:iconTint="@color/black"
                app:cornerRadius="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/login_accent" />

        </LinearLayout>

    </ScrollView>

    <!-- Back Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        app:backgroundTint="@color/login_accent"
        app:fabSize="normal"
        android:layout_gravity="top|start" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

