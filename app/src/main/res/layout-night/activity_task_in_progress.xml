<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.tasks.TaskInProgressActivity">

    <!-- Background gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:alpha="0.9"
                android:text="Tarea en Proceso"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                android:src="@drawable/ic_arrow_back"
                app:fabSize="normal"
                app:tint="@android:color/white" />

            <!-- Timer Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_timer"
                        app:tint="#FF6B35" />

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="00:00:00"
                        android:textColor="#FFFFFF"
                        android:textSize="42sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tiempo Transcurrido"
                        android:textColor="#B0B0B0"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Task Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTaskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Tarea"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:background="#FF6B35"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Task Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_delivery"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/tvTipoOperacion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entrega"
                            android:textSize="16sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_category"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvCategoria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Categoría"
                            android:textSize="16sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Client Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvClienteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Cliente"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E0E0E0"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvClienteAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección del cliente"
                        android:textSize="15sp"
                        android:textColor="#E0E0E0"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="12dp"
                        android:drawableTint="#FF6B35"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvClientePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+593 999 999 999"
                        android:textSize="15sp"
                        android:textColor="#E0E0E0"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="12dp"
                        android:drawableTint="#4CAF50"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCallClient"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="#011520D0"
                    android:text="Llamar"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_phone"
                    app:iconGravity="textStart"
                    app:iconTint="#4CAF50"
                    app:rippleColor="#FF5722"
                    app:strokeColor="#009688" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenMap"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="Mapa"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_location"
                    app:iconGravity="textStart"
                    app:iconTint="#FFEB3B" />

            </LinearLayout>

            <!-- Finish Task Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishTask"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50"
                android:text="Finalizar Tarea"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart" />

        </LinearLayout>

    </ScrollView>

    <!-- Back Button -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
