<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fitsSystemWindows="true"
    tools:context=".ui.tasks.TaskInProgressActivity">

    <!-- Background gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="80dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Header removed -->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                android:src="@drawable/ic_arrow_back"
                app:fabSize="normal"
                app:tint="@android:color/white" />

            <!-- Task Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTaskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Tarea"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:background="#FF6B35"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Client Info -->
                    <TextView
                        android:id="@+id/tvClienteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Cliente"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvClienteAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección del cliente"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="8dp"
                        android:drawableTint="#FF6B35"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvClientePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+593 999 999 999"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="8dp"
                        android:drawableTint="#4CAF50"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Attachments Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvAttachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_archivos_adjuntos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvArchivosAdjuntos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Comentarios Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMENTARIOS"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvComentario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comentario de la tarea..."
                        android:textSize="15sp"
                        android:textColor="#E0E0E0"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvVerMasComentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver más"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B35"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Client Info Card Removed (Moved to top) -->

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCallClient"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="#011520D0"
                    android:text="Llamar"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_phone"
                    app:iconGravity="textStart"
                    app:iconTint="#4CAF50"
                    app:rippleColor="#FF5722"
                    app:strokeColor="#009688" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenMap"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="Mapa"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_location"
                    app:iconGravity="textStart"
                    app:iconTint="#FFEB3B" />

            </LinearLayout>

            <!-- Finish Task Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishTask"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50"
                android:text="Finalizar Tarea"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart" />

        </LinearLayout>

    </ScrollView>

    <!-- Back Button -->

    <!-- Back Button -->
    <!-- (Wait, I should check context of insertion point) -->
    <!-- Existing code ends with CoordinatorLayout close tag. I will insert before that. -->
    
    <!-- Timer (Subtle, Top Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top|end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_timer_subtle"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_timer"
            app:tint="#FF6B35"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
